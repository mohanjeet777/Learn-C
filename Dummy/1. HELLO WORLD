#include<stdio.h>
//tells compiler to include stdio.h file before actual compilation i.e. its a preprocessor command

int main()
//main function and the place where program execution begins
{
    //the place where the contents of the main function are to be written
    printf("HELLO, WORLD!");
    //printf() is a function in c which causes the message within the double apostrophe to be displayed on the screen
    //semicolon is the statement terminator
    return 0;
    //terminates the main function and returns the value of 0
}
